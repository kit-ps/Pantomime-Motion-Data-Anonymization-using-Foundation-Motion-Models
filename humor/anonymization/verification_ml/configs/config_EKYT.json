{
    "name": "EyeKnowYouToo",
    "n_gpu": 1,

    "arch": {
        "type": "EyeKnowYouToo",
        "args": { "num_classes":  116}
    },
    "data_loader": {
        "type": "PantomimeDataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 1280,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "nll_loss",
        "args": {}
    },
    "metrics": [
        "accuracy", "top_k_acc", "balanced_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "use_triplet": false,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 200,

        "tensorboard": false
    }
}
